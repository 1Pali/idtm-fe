<core:FragmentDefinition
    xmlns="sap.m"
    xmlns:core="sap.ui.core"
    xmlns:tnt="sap.tnt"
>
    <tnt:ToolHeader>
        <Button
            class="expandNav"
            id="sideExpanded"
            type="Transparent"
            icon="sap-icon://menu2"
            press="onToggleSideNavigation"
            activeIcon="sap-icon://menu2"
        />

        <ToolbarSpacer />

        <Text
            text="{i18n>MAIN_TITLE}"
            wrapping="false"
        >
            <layoutData>
                <OverflowToolbarLayoutData priority="Disappear" />
            </layoutData>
        </Text>

        <ToolbarSpacer />

        <Button
            text="{i18n>USER_LABEL}"
            icon="sap-icon://slim-arrow-down"
            type="Transparent"
            iconFirst="false"
            press=""
        >
        </Button>
    </tnt:ToolHeader>
</core:FragmentDefinition>
